--- a/configure	2008-08-08 19:08:20.000000000 +0200
+++ b/configure	2008-08-08 19:09:00.000000000 +0200
@@ -2307,6 +2307,11 @@
   machine="powerpc"
 fi
 
+# Force v9
+if test "$machine" = sparc; then
+   machine="sparcv9"
+fi
+
 # Braindead PowerPC box with absolutely no FPU.
 case "$machine-$host_os" in
   powerpc*-*soft)
